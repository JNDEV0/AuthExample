@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-16">
    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl tracking-tight">
        Welcome to <span class="text-blue-600">WebApp</span>
    </h1>
    <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
        A secure, modern application built with ASP.NET Core 8, OpenIddict, and Tailwind CSS.
    </p>
    
    <div class="mt-10 flex justify-center gap-4">
        
    </div>

    <div class="mt-20 grid grid-cols-1 gap-8 sm:grid-cols-3">
        <div class="p-6 bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4 text-blue-600">
                <i data-lucide="shield-check" class="w-6 h-6"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Secure Identity</h3>
            <p class="mt-2 text-base text-gray-500">Powered by OpenIddict and ASP.NET Core Identity for robust security.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4 text-purple-600">
                <i data-lucide="zap" class="w-6 h-6"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Fast Performance</h3>
            <p class="mt-2 text-base text-gray-500">Optimized for speed with minimal APIs and efficient resource handling.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4 text-green-600">
                <i data-lucide="layout" class="w-6 h-6"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Modern UI</h3>
            <p class="mt-2 text-base text-gray-500">Beautifully styled with Tailwind CSS and Lucide icons.</p>
        </div>
    </div>
</div>
