<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script>
        // Initialize Lucide icons
        document.addEventListener("DOMContentLoaded", () => {
            lucide.createIcons();
        });
    </script>
</head>
<body class="bg-gray-50 font-sans text-gray-900 flex flex-col min-h-screen">
    <header class="bg-white border-b border-gray-200 shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
            <div class="flex items-center gap-8">
                <a class="text-xl font-bold text-blue-600 flex items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i data-lucide="layout-grid" class="w-6 h-6"></i>
                    WebApp
                </a>
                <div class="hidden md:flex gap-6">
                    <a class="text-sm font-medium text-gray-600 hover:text-blue-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-sm font-medium text-gray-600 hover:text-blue-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
            <div class="flex items-center gap-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Account/Console" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm flex items-center gap-2">
                        <i data-lucide="user" class="w-4 h-4"></i>
                        @User.Identity.Name
                    </a>
                    <a href="/Account/Logout" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors shadow-sm flex items-center gap-2">
                        <i data-lucide="log-out" class="w-4 h-4"></i>
                        Sign Out
                    </a>
                }
                else
                {
                    <a href="/Account/Login" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm flex items-center gap-2">
                        <i data-lucide="log-in" class="w-4 h-4"></i>
                        Sign In
                    </a>
                    <a href="/Account/Register" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors shadow-sm flex items-center gap-2">
                        <i data-lucide="user-plus" class="w-4 h-4"></i>
                        Register
                    </a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 text-center text-sm text-gray-500">
            &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <div id="modal-container"></div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
